<section>
  <h2 class="h3">Share something <span class="text-dark"><%= current_user.first_name %></span></h2>
  <h2 class="h4">All posts</h2>
  <% if !@posts.empty? %>
    <%= render 'posts/post' %>
  <% else %>
    <div>
      <span>There aren't posts to show</span>
    </div> 
  <% end %>
</section>