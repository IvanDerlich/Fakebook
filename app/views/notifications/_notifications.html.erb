<% if object[:users].empty? %>
  <div> 
    <p>You haven't <%= object[:word] %> any friendship request yet.</p>
  </div>
<% else %>
  <% object[:users].each do |user| %>
  <li class="mb-2 border-bottom">
    <% if object[:word] == 'sent' %>
      You have sent a friendship request to <%= link_to user.first_name, "users/" + user.id.to_s %> 
    <% else %>
       <%= link_to user.first_name, "users/" + user.id.to_s %> sent you a friendship request.
    <% end %>
  </li>
  <% end %>
<% end %>